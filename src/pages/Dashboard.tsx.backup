                          ${data.runningMonth.toLocaleString()}
                        </div>
                      </div>
                    </div>
                  </div>
                  <span className="text-xs text-gray-600 font-medium">{data.month}</span>
                </div>
              );
            })}
          </div>
        </div>

        {/* Payment Sources */}
        <div className="bg-white rounded-xl p-4 shadow-sm border border-gray-100 flex flex-col">
          <div className="flex items-center justify-between mb-4">
            <h2 className="text-lg font-bold text-gray-900">Payment Methods</h2>
          </div>

          <div className="space-y-4 flex-1">
            {paymentSources.map((source, index) => (
              <div key={index}>
                <div className="flex items-center justify-between mb-1.5">
                  <span className="text-xs font-medium text-gray-700">{source.name}</span>
                  <span className="text-xs font-bold text-gray-900">{source.percentage}%</span>
                </div>
                <div className="w-full bg-gray-100 rounded-full h-2 overflow-hidden">
                  <div
                    className={`${source.color} h-full rounded-full transition-all duration-1000 ease-out`}
                    style={{ width: `${source.percentage}%` }}
                  ></div>
                </div>
              </div>
            ))}
          </div>

          {/* Quick Actions */}
          <div className="mt-4 pt-4 border-t border-gray-100 space-y-2">
            <button
              onClick={onRecordPayment}
              className="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 px-4 rounded-lg transition-colors flex items-center justify-center gap-2 text-sm"
            >
              <DollarSign className="w-4 h-4" />
              Record Payment
            </button>
            <div className="grid grid-cols-2 gap-2">
              <button
                onClick={onAddProperty}
                className="bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-3 rounded-lg transition-colors text-xs"
              >
                Add Property
              </button>
              <button
                onClick={onAddTenant}
                className="bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-3 rounded-lg transition-colors text-xs"
              >
                Add Tenant
              </button>
            </div>
          </div>
        </div>
      </div>

      {/* Property List - Removed to fit on one screen */}
    </div>
  );
}
